<?xml version="1.0" encoding="UTF-8"?>
<window type="window">
	<defaultcontrol always="true">300</defaultcontrol>
	<coordinates>
		<system>1</system>
		<left>250</left>
		<top>100</top>
	</coordinates>
  <animation effect="fade" time="500">WindowOpen</animation>
  <animation effect="fade" time="500">WindowClose</animation>
	<controls>
		<control type="group">
			<left>120</left>
      <control type="image">
        <description>background image</description>
        <left>0</left>
        <top>0</top>
        <width>466</width>
        <height>546</height>
        <texture>background.png</texture>
      </control>
      <control type="image">
				<description>background image</description>
				<left>3</left>
				<top>3</top>
				<width>460</width>
				<height>540</height>
				<texture>grey_back.png</texture>
			</control>
			<control type="image">
				<description>Dialog Header image</description>
				<left>3</left>
				<top>3</top>
				<width>460</width>
				<height>40</height>
				<texture>listitem-has-focus.png</texture>
			</control>
			<control type="label" id="1">
				<description>header label</description>
				<left>5</left>
				<top>10</top>
				<width>460</width>
				<height>30</height>
				<font>font13</font>
				<align>center</align>
				<aligny>center</aligny>
				<textcolor>ffe68a00</textcolor>
        <shadowcolor>ffc0c0c0</shadowcolor>
			</control>
		</control>
		<control type="button">
			<description>Close Window button</description>
			<left>510</left>
			<top>4</top>
			<width>64</width>
			<height>32</height>
			<label>-</label>
			<font>-</font>
			<onclick>PreviousMenu</onclick>
			<texturefocus>dialog_close_button_focus.png</texturefocus>
			<texturenofocus>dialog_close_button.png</texturenofocus>
			<onleft>10</onleft>
			<onright>10</onright>
			<onup>10</onup>
			<ondown>10</ondown>
			<visible>system.getbool(input.enablemouse)</visible>
		</control>
		<control type="list" id="300">
			<left>135</left>
			<top>55</top>
			<width>450</width>
			<height>460</height>
			<scrolltime>200</scrolltime>
			<itemlayout height="46" width="450">
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>400</width>
					<height>40</height>
					<texture border="5"></texture>
				</control>
				<control type="label">
					<left>20</left>
					<top>0</top>
					<width>400</width>
					<height>40</height>
					<font>font13</font>
					<textcolor>ff606060</textcolor>
					<align>left</align>
					<aligny>center</aligny>
					<label>$INFO[ListItem.Label]</label>
				</control>
      <control type="image">
        <left>411</left>
        <top>2</top>
        <width>25</width>
        <height>36</height>
        <texture>$INFO[ListItem.Icon]</texture>
      </control>
			</itemlayout>
			<focusedlayout height="46" width="440">
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>437</width>
					<height>40</height>
					<texture border="5">button-has-focus.png</texture>
				</control>
				<control type="label">
					<left>20</left>
					<top>0</top>
					<width>400</width>
					<height>40</height>
					<font>font13</font>
					<textcolor>ff000000</textcolor>
					<align>left</align>
					<aligny>center</aligny>
					<label>$INFO[ListItem.Label]</label>
				</control>
        <control type="image">
        <left>411</left>
        <top>2</top>
        <width>25</width>
        <height>36</height>
          <aspectratio>stretch</aspectratio>
        <texture>$INFO[ListItem.Icon]</texture>
      </control>
			</focusedlayout>
		</control>
    <control type="label">
      <top>510</top>
      <left>250</left>
      <font>font13</font>
      <textcolor>ff606060</textcolor>
    <label>([COLOR=ffe68a00]$INFO[Container(300).NumItems][/COLOR]) Items - Page ([COLOR=ffe68a00]$INFO[Container(300).CurrentPage]/$INFO[Container(300).NumPages][/COLOR])</label>
    </control>
      </controls>
</window>
